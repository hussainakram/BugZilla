  <div class="container">
    <h1>Editing Bug</h1>
    <%= form_for [@bug], html: { multipart: true } do |f| %>
    <% if @bug.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@bug.errors.count, "error") %> prohibited this bug from being saved:</h2>

        <ul>
        <% @bug.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
        </ul>
      </div>
    <% end %>

    <div class="row">
      <div class="field form-group col-md-4">
        <%= f.label :title %>
        <%= f.text_field :title, class: 'form-control' %>
      </div>
    </div>
    <div class="row">
      <div class="field form-group col-md-4">
        <%= f.label :description %>
        <%= f.text_area :description, class: 'form-control' %>
      </div>
    </div>

    <div class="row">
    <div class="field form-group col-md-3">
      <%= f.label :avatar %>
      <%= f.file_field :avatar, class: 'form-control' %>
    </div>
  </div>

    <div class="row">
      <div class="field form-group col-md-2">
        <%= f.label :deadline %>
        <%= f.date_field :deadline,class: 'form-control'%>
      </div>
    </div>

    <div class="row">
      <div class="field form-group col-md-2">
        <%= f.label :bug_type %>
        <%= f.select(:bug_type, options_for_select([['Feature', 'feature'], ['Bug', 'bug']]), {}, {class: "bug_types form-control"}) %>
      </div>
    </div>

    <div class="row feature_status">
    <div class="field form-group col-md-2">
      <%= f.label :feature_status %>
      <%= f.select(:status, options_for_select([['New', 'new'], ['Started', 'started'], ['Completed', 'completed']]), {}, {class: "form-control"}) %>
    </div>
  </div>

  <div class="row bug_status">
    <div class="field form-group col-md-2">
      <%= f.label :bug_status %>
      <%= f.select(:status, options_for_select([['New', 'new'], ['Started', 'started'], ['Resolved', 'resolved']]), {}, {class: "form-control", id: 'bug_bug_status'}) %>
    </div>
  </div>
  <div class="row">
    <div class="field form-group col-md-4">
      <%= f.hidden_field :user_id, value: current_user.id, class: 'form-control' %>
    </div>
  </div

    <div class="actions">
      <%= f.submit "Update Project", class: 'btn btn-primary' %>
    </div>
  <% end %>
</div>
