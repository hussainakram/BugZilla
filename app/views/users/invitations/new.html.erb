<div class="container">
  <h2><%= t "devise.invitations.new.header" %></h2>
  <% project_id = params[:project_id] %>
  <div class="form-group">
      <%= form_for resource, :as => resource_name, :url => invitation_path(resource_name), :html => {:method => :post} do |f| %>
      <%= devise_error_messages! %>

    <% resource.class.invite_key_fields.each do |field| -%>
    <div class="row">
      <div class="col-md-3">
        <p><%= f.label field %><br />
        <%= f.text_field field, class: 'form-control' %></p>
      </div>
    </div>
    <div class="row">
      <div class="col-md-3">
        <p><%= f.label :user_type %><br />
        <%= f.select(:user_type, options_for_select([['Developer', 'developer'], ['Manager', 'manager'], ['Q/A', 'qa']]), {}) %></p>
      </div>
    </div>
    <% end -%>

      <p><%= f.button "Invite User", name: "project_id", value: project_id, class: 'btn btn-success' %></p>
    <% end %>
  </div>
</div>
<%= console %>
