<div class="container">
  <h2>Sprints of <%= @project.name %></h2>
  <div class="row">
    <div class="col-md-8">
      <table class="table table-hover">
        <thead>
          <tr>
            <th>Name</th>
            <th>Start Date</th>
            <th>End Date </th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% @sprints.each do |sprint| %>
          <tr>
            <td><%= sprint.name %></td>
            <td><%= sprint.start_date.strftime("%m/%d/%Y") %></td>
            <td><%= sprint.end_date.strftime("%m/%d/%Y") %></td>
            <td>
              <%= link_to "Show", sprint, class: 'btn btn-xs btn-default' %>
              <%= link_to "Edit", edit_sprint_path(sprint), class: 'btn btn-xs btn-warning' %>
              <%= link_to "Delete", sprint, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-xs btn-danger' %>
            </td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <%= link_to "Create Sprint", new_project_sprint_path(@project), class: 'btn btn-success' %>
</div>
